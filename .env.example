# Supabase Configuration
# Copy this file to .env and fill in your actual credentials

# Supabase Project Settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-secret-key-here

# Optional: Direct PostgreSQL connection (for advanced operations)
SUPABASE_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Database Configuration
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=info

# Video Processing Settings
MAX_VIDEO_DURATION=300
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=mp4,avi,mov,wmv

# Google Cloud TTS (if using)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# API Keys (if needed)
OPENAI_API_KEY=your-openai-key-here
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Security
SECRET_KEY=your-secret-key-for-sessions
JWT_SECRET=your-jwt-secret-key

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# Storage Configuration
STORAGE_BACKEND=local  # Options: local, s3, gcs
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket
AWS_REGION=us-east-1

# Google Cloud Storage
GCS_BUCKET_NAME=your-gcs-bucket
GCS_KEY_FILE=path/to/gcs-service-account.json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0